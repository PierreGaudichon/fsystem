fb-background = #23232e
fb-item = #373743
fb-item-hover = #42424E


@font-face
	font-family bigJohn
	src url(fonts/big-john.otf) format("otf")




html, body
	height 100%
	width 100%
	background-color midnightblue
	color clouds
	cursor default


transition()
	transition all 200ms ease-out

square(s)
	height s
	width s

square-button(s)
	square s
	text-align center
	line-height s

ashpalt-hover()
	transition()
	&:hover
		background-color wetasphalt


.leftMenu
	position fixed
	top 0
	bottom 0
	left -80px
	width 160px
	transition()

	.openButton
		position absolute
		top 0
		bottom 0
		right 0
		width 80px
		z-index 8
		transition()

		i
			display block
			square-button 80px
			font-size 1.2em
			color black
			transition all 200ms ease-in

	ul
		position absolute
		top 0
		bottom 0
		left 0
		width 80px
		background-color black
		z-index 10

	&:hover
		left 0px
		width 80px
		.openButton
			opacity 0

	li
		square-button 80px
		color darken(nephritis, 50%)
		cursor pointer
		transition()

		&:hover
			color lighten(emerland,50%)

		i
			font-size 1.2em


.listView
	margin-left 120px

	.breadcrumb

		li
			display inline-block
			height 40px
			padding-right 20px
			line-height 40px
			transition()

			&:before
				display inline-block
				height 40px
				width 40px
				text-align center
				font-family FontAwesome
				content "\f105"

			&:hover
				background-color wetasphalt

		li:first-child
			padding-left 20px
			&:before
				display none


	.list
		.title
			vertical-align middle
		.button
			display inline-block
			square-button 40px
			ashpalt-hover()

		h2
			display inline-block
			height 40px
			padding-left 20px
			line-height 40px

		ul
			margin-top 40px
			margin-left 40px
			margin-bottom 120px

		li
			vertical-align middle

			.icon
				display inline-block
				square-button 30px
				transition()

			h3
				display inline-block
				height 30px
				line-height 30px

	colored(c)
		transition()
		color c
		&:hover h3
			color lighten(c, 30%)

	.icon-file-pdf-o
		colored alizarin
	.icon-file-movie-o
		colored greensea
	.icon-file-o
		colored clouds
	.icon-music
		colored carrot
	.icon-image
		colored sunflower

	[data-open], [data-previous]
		cursor pointer

	.folder
		color peterriver

	.hidden
		color concrete

