@font-face
    font-family bigJohn
    src url(fonts/big-john.otf) format("otf")


html, body
	height 100%
	width 100%
	background-color midnightblue
	color clouds


transition()
	transition all 200ms ease-out

square(s)
	height s
	width s

square-button(s)
	square s
	text-align center
	line-height s


.leftMenu
	position fixed
	top 0
	bottom 0
	left -80px
	width 160px
	transition()

	.openButton
		position absolute
		top 0
		bottom 0
		right 0
		width 80px
		z-index 8

		i
			display block
			square-button 80px
			font-size 1.2em
			color black
			transition all 200ms ease-in

	ul
		position absolute
		top 0
		bottom 0
		left 0
		width 80px
		background-color black
		z-index 10

	&:hover
		left 0px
		width 80px

	li
		square-button 80px
		color orange
		cursor pointer
		transition()

		&:hover
			color pumpkin

		i
			font-size 1.2em


.listView
	margin-left 80px

	.breadcrumb
		height 40px

		li
			display inline-block
			height 40px
			padding-right 20px
			line-height 40px
			transition()

			&:before
				display inline-block
				height 40px
				width 40px
				text-align center
				font-family FontAwesome
				content "\f105"

			&:hover
				background-color wetasphalt

	.list

	[data-open]
		cursor pointer

	.folder
		color concrete

	.hidden
		display none
